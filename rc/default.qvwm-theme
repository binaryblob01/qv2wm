;
; default.qvwm-theme
;
;   qvwm theme file (default theme)
;
;   This file should be included in the main configuration file (.qvwmrc)
;   using include statement.
;

[Variables]
DefaultIcon		= "def16.ani"	; default titlebar/taskbar-button icon
DefaultLargeIcon	= "def32.ani"	; default task switcher icon
DefaultShortcutIcon	= "icon32.ani"	; default shortcut icon
DefaultFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"

; desktop
WallPaper		= Windows98	; image tiled in the desktop
DesktopColor		= qvblue	; shortcut background color
DesktopActiveColor	= qvblue	; shortcut active color
CursorColor		= white		; cursor color

; titlebar
FrameTitleHeight	= 18
;TitlebarImage		= ""		; titlebar background image
;TitlebarActiveImage	= ""		; titlebar active background image
GradTitlebar		= True		; titlebar gradation
GradTitlebarColors	= 40		; titlebar gradation colors
TitlebarColor		= qvdarkgray	; titlebar color (inactive)
TitlebarColor2		= qvgrey	; titlebar right-side color (inactive)
TitlebarActiveColor	= qvblue	; titlebar color (active)
TitlebarActiveColor2	= qvlightblue	; titlebar right-side color (active)
TitleStringColor	= qvgray	; title string color (inactive)
TitleStringActiveColor	= white		; title string color (active)
TitleFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"

; frame
FrameBorderWidth	= 2
;FrameImage		= ""		; frame background image
;FrameActiveImage	= ""		; frame active background image
FrameColor		= qvgray	; window frame color
FrameActiveColor	= qvgray	; window frame color

; pager
;PagerImage		= ""		; pager background image
PagerColor		= qvgray	; pager color
PagerActiveColor	= qvdarkgray	; selected page color
MiniatureColor		= yellow	; non-active mini window color in pager
MiniatureActiveColor	= red		; active mini window color in pager

; taskbar
TaskbarButtonHeight	= 22
;TaskbarImage		= ""		; taskbar background image
TaskbarColor		= qvgray	; taskbar color
ClockStringColor	= black		; clock string color
UseBoldFont		= False		; use bold font for emphasis
TaskbarFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"
TaskbarBoldFont		= "-*-*-bold-r-normal-*-14-*-*-*-*-*-*-*"

; indicator
IndicatorSize		= 16

; shortcut icon
IconSize		= 32		; icon size
IconStringColor		= white
IconStringActiveColor	= white
IconForeColor		= black		; icon foreground color
IconBackColor		= white		; icon background color
IconFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"

; menu
;MenuImage		= ""		; menu background image
;MenuActiveImage	= ""		; menu background image
MenuColor		= qvgray	; menu color
MenuActiveColor		= qvblue	; selected menu item color
MenuStringColor		= black		; menu string color (unselected)
MenuStringActiveColor	= white		; menu string color (selected)
CtrlMenuFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"

; startmenu
;StartMenuLogoImage	= ""
StartMenuLogoColor	= qvblue
StartMenuFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"
CascadeMenuFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"

; dialog
;DialogImage		= ""		; dialog background image
DialogColor		= qvgray	; dialog color
DialogFont		= "-*-*-medium-r-normal-*-14-*-*-*-*-*-*-*"

; switcher
;SwitcherImage		= ""		; switcher background image
SwitcherColor		= qvgray	; task switcher color
SwitcherActiveColor	= qvblue	; icon selected color
SwitcherStringColor	= black		; switcher string color

; button
ButtonColor		= qvgray	; button color
ButtonActiveColor	= qvgray	; button active color
ButtonStringColor	= black		; button string color
ButtonStringActiveColor	= black		; button string active color

; tooltip
TooltipColor		= qvyellow
TooltipStringColor	= black

; sounds
OpeningSound		= "chimes.wav"
EndingSound		= "chimes.wav"
RestartSound		= "chimes.wav"
;MaximizeSound		= ""
;MinimizeSound		= ""
;RestoreSound		= ""
;ExpandSound		= ""


[Accessories]
"qvwmdesk.ani"		TopRight	Background
